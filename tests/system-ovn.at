check_est_flows () {
    n=$(ovs-ofctl dump-flows br-int table=15 | grep "+est" \
        | grep "ct_mark=$1" | sed -n 's/.*n_packets=\([[0-9]]\{1,\}\).*/\1/p')

    echo "n_packets=$n"
    test -n "$n" && test "$n" != "0"
}

