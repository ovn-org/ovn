ovn-ic-sbctl list route

for i in 1 2; do
    az=az$i
    OVN_CLEANUP_SBOX(gw-$az)
    OVN_CLEANUP_AZ([$az])
done
OVN_CLEANUP_IC
AT_CLEANUP
