OVS_WAIT_UNTIL([test 0 = `ovn-sbctl --bare --columns name find \
ha_chassis_group name="hagrp1" | wc -l`])

AT_CHECK([test 0 = `ovn-sbctl list ha_chassis | grep chassis | wc -l`])

