OVS_WAIT_UNTIL(
    [ref_ch_list=`ovn-sbctl --bare --columns ref_chassis find ha_chassis_group | sort`
     # Trim the spaces.
     ref_ch_list=`echo $ref_ch_list | sed 's/ //g'`
     test "$comp2_ch_uuid" = "$ref_ch_list"])

