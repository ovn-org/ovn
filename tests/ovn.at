    AS_VAR_SET([hvs$i], [$5])
    AS_VAR_SET([hvt$i], [$6])
    if test "$i" = 1; then
        printf '\n-- %s\n' "$i. *_cfg(*_cfg_timestamp): nb=$1($2) sb=$3($4) hv=$5($6)"
    else
        AS_VAR_ARITH([p], [$i - 1])
