       ovn-nbctl lsp-set-type $ln_port_name localnet
       ovn-nbctl lsp-set-options $ln_port_name network_name=phys
   done

   # lsp_to_ls LSP
   #
   # Prints the name of the logical switch that contains LSP.
   lsp_to_ls () {
       case ${1} in dnl (
           lp?[[11]]) echo ls1 ;; dnl (
           lp?[[12]]) echo ls2 ;; dnl (
           *) AT_FAIL_IF([:]) ;;
       esac
   }

   vif_to_hv () {
       case $1 in dnl (
           vif[[1]]?) echo hv1 ;; dnl (
           vif[[2]]?) echo hv2 ;; dnl (
           vif?[[north]]?) echo hv4 ;; dnl (
           *) AT_FAIL_IF([:]) ;;
       esac
