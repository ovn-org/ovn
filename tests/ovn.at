        IPv6(src='${src_ip}', dst='ff02::2') /
        ICMPv6MLQuery2()
    ")
    as hv1 ovs-appctl netdev-dummy/receive vif${inport} $packet

    expected_packet=$packet
    echo $expected_packet >> $outport.expected
}

