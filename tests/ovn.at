           set Interface vif$i$i external-ids:iface-id=lp$i$i \
                                 options:tx_pcap=hv$i/vif$i$i-tx.pcap \
                                 options:rxq_pcap=hv$i/vif$i$i-rx.pcap \
                                 ofport-request=$i$i

