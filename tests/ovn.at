    local icmp6=${icmp6_type}${icmp6_code}${cksum}${icmp6_rsvd}${tpa}${icmp6_opt}${icmp6_optlen}${eth_src}

    local request=${eth}${ip}${icmp6}

    check as hv$hv ovs-appctl netdev-dummy/receive hv${hv}-vif$inport $request
}

