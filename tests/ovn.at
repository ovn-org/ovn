# - nb_cfg_timestamp into nbt$IDX
# - sb_cfg into sbs$IDX
# - sb_cfg_timestamp into sbt$IDX
# - hv_cfg into hvs$IDX
# - hv_cfg_timestamp into hvt$IDX
get_cfg() {
    local i=$1
    set -- $(ovn-nbctl get nb_global . nb_cfg nb_cfg_timestamp sb_cfg sb_cfg_timestamp hv_cfg hv_cfg_timestamp)
    AS_VAR_SET([nbs$i], [$1])
