       ls_name=ls$i
       ovn-nbctl ls-add $ls_name
       ln_port_name=ln$i
       if test $i -eq 1; then
           ovn-nbctl lsp-add $ls_name $ln_port_name "" 101
       elif test $i -eq 2; then
           ovn-nbctl lsp-add $ls_name $ln_port_name "" 201
